<Window x:Class="ElGamalTools.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElGamalTools"
        mc:Ignorable="d"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Password" Height="120" Width="300">
    <Grid>
        <StackPanel>
            <Border BorderThickness="2" Padding="10">
                <StackPanel>
                    <xctk:WatermarkPasswordBox Name="password" Watermark="Password" Margin="0,0,0,10"/>
                    <Button Height="20" Click="Button_Click">
                        Подтвердить пароль
                    </Button>
                </StackPanel>

            </Border>
        </StackPanel>
    </Grid>
</Window>
